<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"    android:id="@+id/rowItemParent"
                android:layout_margin="@dimen/default_padding_5"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="wrap_content"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="5dp"
                                        android:id="@+id/cardvw"
                                        android:layout_margin="@dimen/default_padding_5"
                                        android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/parent_rowitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgvw_thumb"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/stlic"
                    android:scaleType="fitStart"
                    android:padding="@dimen/default_padding_5"/>

            <View android:layout_width="match_parent"
                  android:background="@color/colorPrimary"
                  android:layout_height="1dp"/>

            <TextView
                    android:textAlignment="center"
                    android:id="@+id/txtvw_filename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File 1"/>


        </LinearLayout>
        <com.asoss.a3drender.app.Utilities.CircularTextView
                android:id="@+id/circularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="3dp"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
