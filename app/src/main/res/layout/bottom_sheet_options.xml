<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_padding_25"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@color/transparent_colorPrimary"
            android:text="Options"/>

    <View
            android:background="@color/md_black_1000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_option_model_1"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:drawablePadding="@dimen/default_padding_5"
                android:id="@+id/tvEmbeddedModels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="Embedded Models"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_option_repo_2"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvRepository"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="10dp" android:drawablePadding="@dimen/default_padding_5"
                android:text="Repository"/>

    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_option_storage_3"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvExternalStorage" android:drawablePadding="@dimen/default_padding_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="External Storage"/>

    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_option_content_4"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvContentProvider"
                android:layout_width="match_parent" android:drawablePadding="@dimen/default_padding_5"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="Content Provider"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_option_settings"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvSettings"
                android:layout_width="match_parent" android:drawablePadding="@dimen/default_padding_5"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="Settings"/>

    </LinearLayout>

</LinearLayout>