<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_padding_25"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@color/transparent_colorPrimary"
            android:text="Choose option"/>

    <View
            android:background="@color/md_black_1000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:id="@+id/tvCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_camera_enhance_black_24dp"
            android:drawablePadding="@dimen/default_padding_5"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:text="Camera"/>


    <TextView android:drawableLeft="@drawable/ic_photo_library_black_24dp"
              android:id="@+id/tvGallery"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/default_padding_5"
              android:textColor="@android:color/black"
              android:padding="10dp"
              android:text="Gallery"/>


</LinearLayout>