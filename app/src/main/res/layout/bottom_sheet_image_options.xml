<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_padding_25"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@color/transparent_colorPrimary"
            android:text="Choose option"/>

    <View
            android:background="@color/md_black_1000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_camera_enhance_black_24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_padding_5"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="Camera"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:padding="10dp"
                app:srcCompat="@drawable/ic_photo_library_black_24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_padding_5"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:text="Gallery"/>
    </LinearLayout>

</LinearLayout>