<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/md_white_1000"
        tools:context=".CoreModules.SplashActivity">


    <LinearLayout android:orientation="vertical"
                  android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                android:layout_gravity="center"
        />

        <android.support.v7.widget.CardView
                android:layout_marginTop="50dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="@color/md_white_1000"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="@string/app_name"
                      android:fontFamily="@font/wedgie"
                      android:layout_gravity="bottom"
                      android:gravity="center"
                      android:textSize="50dp"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="@color/colorPrimary"
            />

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <TextView
            android:text="Powered by Asoss GmbH"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:paddingBottom="@dimen/activity_small_margin"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>


</LinearLayout>